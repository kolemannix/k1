}

fn brute(input: string) {
  let commands = input.splitByChar('\n');

  let pos = 50;
  let zeroes = 0;
  for commands {
    let negative = it.get(0) == 'L';
    let magnitudeStr = it.drop(1);
    require string/parseBase10(magnitudeStr) is .Some(magnitude) else { return() };
    let m = magnitude.as[int];
    while m > 0 {
      if negative { pos := pos - 1 } else { pos := pos + 1 };
      if pos < 0 { pos := pos + 100 };
      if pos > 99 { pos := pos - 100 };
      if pos == 0 {
        zeroes := zeroes + 1
      };

      m := m - 1;
    };

    
  };
  println("Zeroes: {zeroes}");
}

