    let magnitudeStr = it.drop(1);
    let isZero = pos == 0;
    let _lastPos = pos;
    require string/parseBase10(magnitudeStr) is .Some(magnitude) else { return() };

    let change = if negative { magnitude.as[int] * -1 } else magnitude.as[int];

    pos := pos + change;
    
    if (pos < 0 and not isZero) { mzs := mzs + 1 };
    mzs := mzs + (pos.abs() / 100);
    if (pos == 0) { mzs := mzs + 1 };

    pos := ((pos % 100) + 100) % 100;

