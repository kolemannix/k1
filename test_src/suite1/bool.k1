ns bool_test;

fn crashBool(): bool {
  crash("secret crash")
}

fn test(): unit {
  let t = true;
  let f = false;
  assert(not (t and f));
  assert(t or f);
  assert(t and t);
  assert(not (f and f));
  assert(not (f or f));

  // The point is that crashBool never runs
  let r1 = if true or crashBool() true else false;
  assert(r1);

  // The point is that crashBool never runs
  let r2 = if false and crashBool() false else true;
  assert(r2);

  assertEquals(t as u8, 1);
  assertEquals(f as u8, 0);
  assertEquals(t as i32, 1);
  assertEquals(f as i32, 0);

  ()
}
