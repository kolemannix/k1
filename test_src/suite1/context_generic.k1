ns context_generic;

deftype MyBox[T] = { value: T }

fn box[T](context _foo: T)(value: T): MyBox[T] {
  { value: value }
}

fn testBox() {
  let context b = true;
  let context c = { b: true };
  box(context 10)(10);
  box[bool](true);
  box(false);
  box({ b: false });
  {}
}

fn contextC[T: Equals](context t: T, name: string)(value: T) {
  assert(name == "Joe");
  assert(t == value);
}

fn contextB[T: Equals](context t: T, name: string)(value: T) {
  assert(t == value);
  contextC(value)
}

fn contextA[T: Equals](context t: T, name: string)(value: T) {
  assert(t == value);
  contextB(value)
}

fn testGenericPassing() {
  let context i = 3;
  let context name: string = "Joe";
  contextA(3);
  {}
}

fn test() {
  testBox();
  testGenericPassing();
  {}
}
