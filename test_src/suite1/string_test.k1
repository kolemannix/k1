ns string_test;

fn escape(): unit {
  let s = "\n\0\t\r\"\\";
  let codes = List/fromMap(s, \c. c.as_u8());
  assert(codes == [10, 0, 9, 13, 34, 92]);
  assert(s.get(0) == '\n');
  assert(s.get(1) == '\0');
  assert(s.get(2) == '\t');
  assert(s.get(3) == '\r');
  assert(s.get(4) == '"');
  assert(s.get(5) == '\\');
}

fn test(): unit {

  let abc: string = "abc";
  let conc = abc.concat(abc);
  assert(conc == "abcabc");
  assert(conc.len() == 6);

  assert("abc" != "123");
  assert("abc" != "abcc");
  assert("abc" == "abc");

  assert("abc".appendChar('x') == "abcx");

  assert("".splitByChar('.') == []);

  assertEquals("a.".splitByChar('.'), ["a"]);
  assert("bbb.".splitByChar('.') == ["bbb"]);
  assertEquals("a.b.cc.d".splitByChar('.'), ["a", "b", "cc", "d"]);
  assert("a...".splitByChar('.') == ["a", "", ""]);
  assert("..".splitByChar('.') == ["", ""]);

  assert("hello".indexOfString("hel").! == 0);
  assert("hello".indexOfString("").! == 0);
  assert("hello".indexOfString("e").! == 1);
  assert("hello".indexOfString("x") is .None);

  assert("hello".indexOf('e') == 1);
  assert("hello".indexOf('x') == -1);

  assert("123".toInt().! == 123);
  assert("-123".toInt().! == -123);
  assert(not "--".toInt().isOk());
  assert(not "123a".toInt().isOk());
  assert("12399999".toInt().! == 12399999);

  escape();
}
