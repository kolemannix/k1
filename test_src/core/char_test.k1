ns char_test;

fn basic(): unit {
  let c: char = '!';
  assert(c == '!');
  let s = c.toString();
  print(s);
  //println(s);
  assert(s.len() == 1);
  assert(s.get(0) == '!');

  assert(s.appendChar('!') == "!!");
}

