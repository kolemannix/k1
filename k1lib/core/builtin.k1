ns Array {
  fn getBaseRead[T, N: static int](array: *Array[T, N]): *T {
    array.getRef(0)
  }
  fn getBase[T, N: static int](array: *mut Array[T, N]): *mut T {
    array.getRef(0)
  }
  fn basePtr[T, N: static int](array: *mut Array[T, N]): ptr {
    array as ptr
  }
  fn sizeBytes[T, N: static int](_array: Array[T, N]): int {
    types/sizeOf[Array[T, N]]()
  }

  fn zeroed[T, N: static int](): Array[T, N] {
    mem/zeroed[Array[T, N]]()
  }

  fn bytes[N: static int](): Array[u8, N] {
    mem/zeroed[Array[u8, N]]()
  }

  fn allocate[T, N: static int](context alloc: mem/AllocMode)(): *mut Array[T, N] {
    alloc.allocT[Array[T, N]]()
  }

  fn memset[T, N: static int](array: *mut Array[T, N], value: u8): unit {
    mem/set(dst = array.basePtr(), value = value, count = array.sizeBytes())
  }

  fn set[T, N: static int](array: *mut Array[T, N], index: int, value: T): unit {
    array.getRef(index) <- value
  }

  fn filledIn[T, N: static int](context alloc: mem/AllocMode)(t: T, n: N): *mut Array[T, N] {
    let arrayUninit = allocate[T, N]();
    let i = 0;
    while i < n.fromStatic() {
      arrayUninit.getRef(i) <- t;
      i := i + 1;
    };
    arrayUninit
  }

  fn asBuffer[T, N: static int](array: *mut Array[T, N]): Buffer[T] {
    { len: array.len(), data: array.getBase() }
  }

  fn asView[T, N: static int](array: *Array[T, N]): View[T] {
    let tempBuffer = array.toMut.asBuffer();
    View/wrapBuffer(tempBuffer)
  }

}

