ns u8 {
  fn toAsciiDigitBase(v: u8, base: u64): char {
    if v < 10 {
      (v + 48) as char // '0' + v
    } else if v < 36 {
      (v + 87) as char // 'a' + (v - 10)
    } else if v < 62 {
      (v + 29) as char // 'A' + (v - 36)
    } else {
      crash("u8/toAsciiDigitBase: value {v} is out of range for base {base}")
    }
  }
  fn toAsciiDigit(v: u8): char {
    (v + 48) as char
  }
}

ns i64 {
  let maxValue: i64 = 0x7FFFFFFFFFFFFFFF;
  fn nextPow2(self: i64): i64 {
    // TODO: We could call ctlz instead when available
    if self < 0 crash("i64/nextPow2: value must be positive") else
    if self == 0 return(1);

    let next = (self as u64).nextPow2();
    if next > i64/maxValue as u64 {
      crash("i64/nextPow2: value too large to fit in i64")
    };
    next as i64
  }

  fn abs(self: i64): i64 {
    let mask = self.shiftRight(63);
    self.xor(mask) - mask;
  }
}

ns u64 {
  fn nextPow2(self: u64): u64 {
    let v = self - 1;
    v := v.bitOr(v.shiftRight(1));
    v := v.bitOr(v.shiftRight(2));
    v := v.bitOr(v.shiftRight(4));
    v := v.bitOr(v.shiftRight(8));
    v := v.bitOr(v.shiftRight(16));
    v := v.bitOr(v.shiftRight(32));
    v + 1
  }

  fn bitmaskLow(n: size): u64 {
    assert(n <= 64);
    1usize.shiftLeft((n) as u32) - 1
  }

}

